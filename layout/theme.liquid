<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }} | {{ shop.name }}</title>
    {{ content_for_header }}
    <link href="{{ 'main.css' | asset_url }}" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm">
      <div class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-semibold">{{ shop.name }}</a>
        <nav class="hidden md:flex items-center gap-6">
          <a href="/collections/all" class="hover:text-blue-600">Shop</a>
          <a href="/blogs/news" class="hover:text-blue-600">Blog</a>
          <a href="/pages/contact" class="hover:text-blue-600">Contact</a>
        </nav>
        <a href="/cart" class="relative" x-data>
          <span class="sr-only">Cart</span>
          <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-blue-600 text-white text-xs" x-text="$store.cart.count">0</span>
        </a>
      </div>
    </header>
    <main class="mx-auto max-w-7xl px-4 py-8">
      {{ content_for_layout }}
    </main>
    <script src="{{ 'main.js' | asset_url }}" type="module"></script>
  </body>
</html>
