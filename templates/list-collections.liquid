
<main class="mx-auto max-w-7xl px-4 py-10">
  {% render 'breadcrumbs' %}
  <header class="mb-8">
    <h1 class="text-3xl font-bold">Shop</h1>
    <p class="text-gray-600 mt-2">Browse our curated collections.</p>
  </header>
  <div class="grid gap-6 grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
      <a href="{{ collection.url }}" class="group block rounded-lg overflow-hidden bg-white shadow-sm hover:shadow-md transition-shadow">
        <div class="aspect-[4/3] bg-gray-100">
          {% if collection.image %}
            <img src="{{ collection.image | img_url: '720x' }}" class="h-full w-full object-cover" alt="{{ collection.title | escape }}" loading="lazy">
          {% endif %}
        </div>
        <div class="p-4">
          <h2 class="font-medium group-hover:text-blue-600">{{ collection.title }}</h2>
          <p class="text-sm text-gray-600">{{ collection.all_products_count }} products</p>
        </div>
      </a>
      {% endunless %}
    {% endfor %}
  </div>
</main>
