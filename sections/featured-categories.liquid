<!-- Shop By Category Section -->
<section class="py-20 bg-white">
  <div class="mx-auto max-w-7xl px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-light text-slate-900 mb-4">
        Shop By Your Specific 
        <span class="font-semibold text-amber-600">Lifestyle Need</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Discover curated collections designed to enhance every aspect of your premium lifestyle.
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="categories-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <!-- Category 1 -->
      <a href="/collections/luxury-lifestyle" class="category-card group bg-white border border-slate-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 hover:border-amber-300">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-slate-900">Luxury Lifestyle</h3>
          <svg class="w-6 h-6 text-slate-400 group-hover:text-amber-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
        <p class="text-slate-600 text-sm leading-relaxed mb-4">
          Premium essentials and sophisticated accessories for the modern connoisseur.
        </p>
        <div class="inline-flex items-center text-amber-600 text-sm font-medium">
          <span>Explore Collection</span>
          </div>
        </a>
      
      <!-- Category 2 -->
      <a href="/collections/executive-essentials" class="category-card group bg-white border border-slate-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 hover:border-amber-300">
