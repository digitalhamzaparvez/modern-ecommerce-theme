<footer class="bg-yellow-100 py-16">
  <div class="mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Brand Section -->
      <div class="space-y-6">
        <div class="space-y-4">
          <h2 class="text-3xl font-bold text-gray-900">
            {{ settings.brand_name | default: shop.name }}
            <span class="block text-2xl font-normal text-yellow-600">Made Simple</span>
          </h2>
          
          <!-- Logo/Badge -->
          <div class="inline-block">
            <div class="bg-yellow-400 text-gray-900 px-4 py-2 rounded-full text-sm font-bold uppercase tracking-wide">
              {{ settings.brand_tagline | default: "Simple Promise" }}
            </div>
          </div>
        </div>
        
        <!-- Company Description -->
        <p class="text-gray-700 text-sm leading-relaxed">
          {{ settings.seo_organization_description | default: "Premium lifestyle products curated for the discerning individual. Experience excellence in every purchase." }}
        </p>
      </div>
      
      <!-- Shop Links -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-6 text-lg">Shop</h3>
        <ul class="space-y-3 text-gray-700">
          <li><a href="/collections/featured" class="hover:text-yellow-600 transition-colors text-sm">Best Sellers</a></li>
          <li><a href="/collections/new" class="hover:text-yellow-600 transition-colors text-sm">New Arrivals</a></li>
          <li><a href="/collections/wellness" class="hover:text-yellow-600 transition-colors text-sm">Wellness</a></li>
          <li><a href="/collections/supplements" class="hover:text-yellow-600 transition-colors text-sm">Supplements</a></li>
          <li><a href="/collections/fitness" class="hover:text-yellow-600 transition-colors text-sm">Fitness</a></li>
          <li><a href="/collections/nutrition" class="hover:text-yellow-600 transition-colors text-sm">Nutrition</a></li>
        </ul>
      </div>
      
      <!-- Resources Links -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-6 text-lg">Resources</h3>
        <ul class="space-y-3 text-gray-700">
          <li><a href="/blogs/recipes" class="hover:text-yellow-600 transition-colors text-sm">Recipes</a></li>
          <li><a href="/blogs/fitness" class="hover:text-yellow-600 transition-colors text-sm">Fitness</a></li>
          <li><a href="/blogs/nutrition" class="hover:text-yellow-600 transition-colors text-sm">Nutrition</a></li>
          <li><a href="/pages/ingredients" class="hover:text-yellow-600 transition-colors text-sm">Ingredients</a></li>
          <li><a href="/blogs/reviews" class="hover:text-yellow-600 transition-colors text-sm">Reviews</a></li>
        </ul>
      </div>
      
      <!-- Quick Links & Contact -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-6 text-lg">Quick Links</h3>
        <ul class="space-y-3 text-gray-700 mb-6">
          <li><a href="/" class="hover:text-yellow-600 transition-colors text-sm">Home</a></li>
          <li><a href="/pages/about" class="hover:text-yellow-600 transition-colors text-sm">About Us</a></li>
          <li><a href="/pages/contact" class="hover:text-yellow-600 transition-colors text-sm">Sign Up</a></li>
          <li><a href="/policies/return-policy" class="hover:text-yellow-600 transition-colors text-sm">Return Policy</a></li>
          <li><a href="/pages/faq" class="hover:text-yellow-600 transition-colors text-sm">FAQ</a></li>
        </ul>
        
        <!-- Contact Info -->
        <div class="space-y-2">
          <h4 class="font-semibold text-gray-900 text-lg">Contact Us</h4>
          {% if settings.store_email %}
            <p class="text-gray-700 text-sm flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              {{ settings.store_email }}
            </p>
          {% endif %}
          {% if settings.store_phone %}
            <p class="text-gray-700 text-sm flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              {{ settings.store_phone }}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Disclaimer -->
    <div class="mt-12 pt-8 border-t border-yellow-200">
      <p class="text-xs text-gray-600 leading-relaxed mb-4">
        *These statements have not been evaluated by the Food and Drug Administration. This product is not intended to diagnose, treat, cure, or prevent any disease. Please Note: The material on this site is provided for informational purposes only and is not medical advice. Always consult your physician before beginning any diet or exercise program.
      </p>
      
      <!-- Bottom Footer -->
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex items-center space-x-4 text-sm text-gray-600">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ settings.brand_name | default: shop.name }}‚Ñ¢</p>
          <a href="/policies/terms-of-service" class="hover:text-yellow-600 transition-colors">Terms and Conditions</a>
          <a href="/policies/privacy-policy" class="hover:text-yellow-600 transition-colors">Privacy Policy</a>
        </div>
        
        <!-- Currency Selector -->
        <div class="flex items-center space-x-4">
          <select class="border border-gray-300 rounded-md px-3 py-1 text-sm bg-white">
            <option>USD</option>
            <option>EUR</option>
            <option>GBP</option>
          </select>
          
          <!-- Social Media -->
          {% if settings.social_facebook_link %}
            <a href="{{ settings.social_facebook_link }}" class="text-gray-600 hover:text-yellow-600 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

