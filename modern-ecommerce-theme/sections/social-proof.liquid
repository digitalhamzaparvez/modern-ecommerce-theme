<section class="py-12 bg-slate-50">
  <div class="mx-auto max-w-7xl px-6">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-slate-800 mb-2">Join 50,000+ Happy Customers</h2>
      <div class="flex items-center justify-center space-x-1 text-amber-400">
        {% for i in (1..5) %}
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        {% endfor %}
        <span class="ml-2 text-slate-600 font-medium">4.9/5 based on 12,847 reviews</span>
      </div>
    </div>
    
    <!-- Live activity feed -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6" x-data="liveActivity()">
      <div class="flex items-center space-x-3">
        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
        <p class="text-sm text-slate-600" x-text="currentActivity"></p>
      </div>
    </div>
    
    <!-- Customer photos -->
    <div class="grid grid-cols-6 md:grid-cols-12 gap-2">
      {% for i in (1..12) %}
        <div class="aspect-square bg-gradient-to-br from-slate-200 to-slate-300 rounded-lg"></div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  function liveActivity() {
    const activities = [
      "Sarah from New York just purchased Premium Wellness Kit",
      "Mike from California added 3 items to cart",
      "Emma from Texas just left a 5-star review",
      "John from Florida purchased Tech Accessories Bundle",
      "Lisa from Michigan just signed up for newsletter",
      "David from Illinois added Premium Pet Kit to wishlist"
    ];
    
    return {
      currentActivity: activities[0],
      init() {
        setInterval(() => {
          this.currentActivity = activities[Math.floor(Math.random() * activities.length)];
        }, 4000);
      }
    };
  }
</script>
