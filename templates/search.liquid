{% section 'header' %}
<main class="mx-auto max-w-7xl px-4 py-8">
  <form action="/search" method="get" class="mb-6 flex gap-2">
    <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search products..." class="border rounded-lg px-4 py-2 flex-1">
    <button class="btn-primary">Search</button>
  </form>

  {% if search.performed %}
    <h2 class="text-xl font-semibold mb-4">Results for “{{ search.terms | escape }}”</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for item in search.results %}
        {% if item.object_type == 'product' %}
          {% render 'product-card', product: item %}
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</main>
{% section 'footer' %}
