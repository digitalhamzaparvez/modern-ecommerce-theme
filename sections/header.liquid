<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-200" x-data>
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-amber-500 to-amber-600 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <span class="font-bold text-xl text-premium">{{ shop.name }}</span>
      </a>
      
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/collections/all" class="text-slate-700 hover:text-amber-600 font-medium transition-colors">Shop</a>
        <a href="/blogs/news" class="text-slate-700 hover:text-amber-600 font-medium transition-colors">Blog</a>
        <a href="/pages/contact" class="text-slate-700 hover:text-amber-600 font-medium transition-colors">Contact</a>
      </nav>
      
      <div class="flex items-center space-x-4">
        <a href="/account/login" class="text-slate-700 hover:text-amber-600 font-medium transition-colors">Login</a>
        <a href="/cart" class="relative">
          <div class="w-10 h-10 bg-gradient-to-br from-amber-500 to-amber-600 rounded-lg flex items-center justify-center text-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m2.6 8L6 21h12M9 19v2m4-2v2"></path>
            </svg>
          </div>
          <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center" x-text="$store.cart.count">0</span>
        </a>
      </div>
    </div>
  </div>
</header>
