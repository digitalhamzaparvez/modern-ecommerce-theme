<header class="sticky top-0 z-50 bg-white border-b border-gray-200" x-data="{ mobileMenuOpen: false, searchOpen: false }">
  <!-- Announcement Bar -->
  <div class="bg-gray-800 text-white text-center py-2 text-sm">
    <div class="flex items-center justify-center space-x-4">
      <span>{{ settings.urgency_banner_text | default: "Don't miss out on amazing deals! Every purchase is backed by our unbeatable 365-Day Guarantee!" }}</span>
      {% if settings.store_phone %}
        <a href="tel:{{ settings.store_phone }}" class="hidden md:inline-flex items-center text-yellow-400 hover:text-yellow-300 font-medium">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Order Now: {{ settings.store_phone }}
        </a>
      {% endif %}
      <a href="/pages/help" class="hidden md:inline text-yellow-400 hover:text-yellow-300">Help</a>
    </div>
  </div>
  
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-center justify-between h-16">
      
      <!-- Main Navigation Menu -->
      <nav class="hidden lg:flex items-center space-x-8">
        <div class="relative group">
          <a href="/collections/all" class="text-gray-700 hover:text-gray-900 font-medium flex items-center">
            Shop
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
          <!-- Dropdown Menu -->
          <div class="absolute top-full left-0 w-64 bg-white shadow-lg rounded-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 mt-2">
            <div class="p-4">
              <ul class="space-y-2">
                <li><a href="/collections/best-sellers" class="block text-gray-700 hover:text-gray-900 py-2">Best Sellers</a></li>
                <li><a href="/collections/new-arrivals" class="block text-gray-700 hover:text-gray-900 py-2">New Arrivals</a></li>
                <li><a href="/collections/wellness" class="block text-gray-700 hover:text-gray-900 py-2">Wellness</a></li>
                <li><a href="/collections/supplements" class="block text-gray-700 hover:text-gray-900 py-2">Supplements</a></li>
                <li><a href="/collections/fitness" class="block text-gray-700 hover:text-gray-900 py-2">Fitness</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <div class="relative group">
          <a href="/blogs/health" class="text-gray-700 hover:text-gray-900 font-medium flex items-center">
            Health Needs
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
        
        <div class="relative group">
          <a href="/pages/about" class="text-gray-700 hover:text-gray-900 font-medium flex items-center">
            About
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </nav>
      
      <!-- Logo -->
      <a href="/" class="flex items-center justify-center flex-shrink-0">
        {% if settings.logo %}
          <img src="{{ settings.logo | img_url: '150x' }}" alt="{{ shop.name }}" class="h-8 w-auto">
        {% else %}
          <div class="bg-yellow-400 text-gray-900 px-4 py-2 rounded-full font-bold">
            <span class="text-sm uppercase tracking-wide">{{ settings.brand_name | default: shop.name }}</span>
          </div>
        {% endif %}
      </a>
      
      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <!-- Search -->
        <button @click="searchOpen = !searchOpen" class="text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
        
        <!-- Login/Register -->
        <a href="/account/login" class="text-gray-700 hover:text-gray-900 font-medium">Login / Register</a>
        
        <!-- Cart -->
        <a href="/cart" class="relative text-gray-700 hover:text-gray-900" x-data="{ cartCount: 0 }">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m2.6 8L6 21h12M9 19v2m4-2v2"></path>
          </svg>
          <span x-show="cartCount > 0" x-text="cartCount" class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"></span>
        </a>
        
        <!-- Mobile Menu Button -->
        <button @click="mobileMenuOpen = !mobileMenuOpen" class="lg:hidden text-gray-700 hover:text-gray-900">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Search Bar (Desktop) -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <form action="/search" method="get" class="relative w-full">
          <input type="search" name="q" placeholder="Search products..." 
                 class="w-full px-4 py-2 pl-10 pr-4 rounded-lg border border-slate-300 focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
                 value="{{ search.terms | escape }}">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
            <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </form>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-2">
        <!-- Search Toggle (Mobile) -->
        <button @click="searchOpen = !searchOpen" class="md:hidden p-2 text-slate-700 hover:text-amber-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
        
        <!-- Account -->
        <a href="/account/login" class="hidden sm:flex text-slate-700 hover:text-amber-600 font-medium transition-colors">Login</a>
        
        <!-- Cart -->
        <button @click="$dispatch('cart:toggle')" class="relative">
          <div class="w-10 h-10 bg-gradient-to-br from-amber-500 to-amber-600 rounded-lg flex items-center justify-center text-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m2.6 8L6 21h12M9 19v2m4-2v2"></path>
            </svg>
          </div>
          <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center" x-text="$store.cart.count">0</span>
        </button>
        
        <!-- Mobile Menu Toggle -->
        <button @click="mobileMenuOpen = !mobileMenuOpen" class="lg:hidden p-2 text-slate-700 hover:text-amber-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Search -->
    <div x-show="searchOpen" x-transition class="md:hidden py-4 border-t">
      <form action="/search" method="get" class="relative">
        <input type="search" name="q" placeholder="Search products..." 
               class="w-full px-4 py-3 pl-10 pr-4 rounded-lg border border-slate-300 focus:ring-2 focus:ring-amber-500 focus:border-transparent"
               value="{{ search.terms | escape }}">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
          <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </form>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div x-show="mobileMenuOpen" x-transition class="lg:hidden border-t bg-white">
    <nav class="px-6 py-4 space-y-4">
      <a href="/collections/all" class="block text-slate-700 hover:text-amber-600 font-medium transition-colors">Shop</a>
      <a href="/blogs/news" class="block text-slate-700 hover:text-amber-600 font-medium transition-colors">Blog</a>
      <a href="/pages/contact" class="block text-slate-700 hover:text-amber-600 font-medium transition-colors">Contact</a>
      <div class="pt-4 border-t">
        <a href="/account/login" class="block text-slate-700 hover:text-amber-600 font-medium transition-colors">Login</a>
        <a href="/account/register" class="block mt-2 btn-premium text-center">Sign Up</a>
      </div>
    </nav>
  </div>
</header>
