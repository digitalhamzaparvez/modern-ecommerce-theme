{% comment %}
  Breadcrumbs Navigation Snippet
  Generates SEO-friendly breadcrumb navigation
{% endcomment %}

<nav aria-label="Breadcrumb" class="flex items-center space-x-2 text-sm text-slate-600">
  <!-- Home -->
  <a href="/" class="hover:text-amber-600 transition-colors">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
  </a>
  
  <!-- Collection pages -->
  {% if template contains 'collection' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">{{ collection.title }}</span>
  
  <!-- Product pages -->
  {% elsif template contains 'product' %}
    {% if collection %}
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <a href="{{ collection.url }}" class="hover:text-amber-600 transition-colors">
        {{ collection.title }}
      </a>
      {% endif %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">{{ product.title | truncate: 50 }}</span>
  
  <!-- Blog pages -->
  {% elsif template contains 'blog' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <a href="{{ blog.url }}" class="hover:text-amber-600 transition-colors">
      {{ blog.title }}
    </a>
    {% if template contains 'article' %}
      <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-slate-800 font-medium">{{ article.title | truncate: 50 }}</span>
    {% endif %}
  
  <!-- Article pages -->
  {% elsif template contains 'article' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <a href="{{ blog.url }}" class="hover:text-amber-600 transition-colors">
      {{ blog.title }}
    </a>
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">{{ article.title | truncate: 50 }}</span>
  
  <!-- Page pages -->
  {% elsif template contains 'page' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">{{ page.title }}</span>
  
  <!-- Search pages -->
  {% elsif template contains 'search' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">
      Search{% if search.terms %}: "{{ search.terms }}"{% endif %}
    </span>
  
  <!-- Cart pages -->
  {% elsif template contains 'cart' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">Shopping Cart</span>
  
  <!-- Account pages -->
  {% elsif template contains 'customers' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">Account</span>
  
  <!-- List collections -->
  {% elsif template contains 'list-collections' %}
    <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-slate-800 font-medium">All Collections</span>
  {% endif %}
</nav>

<!-- Structured Data for Breadcrumbs -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "{{ shop.url }}"
    }
    {% if template contains 'collection' %},
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{ collection.title }}",
      "item": "{{ collection.url | prepend: request.host }}"
    }
    {% elsif template contains 'product' %}
      {% if collection %},
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ collection.title }}",
        "item": "{{ collection.url | prepend: request.host }}"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{ product.title }}",
        "item": "{{ product.url | prepend: request.host }}"
      }
      {% else %},
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ product.title }}",
        "item": "{{ product.url | prepend: request.host }}"
      }
      {% endif %}
    {% elsif template contains 'blog' %},
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{ blog.title }}",
      "item": "{{ blog.url | prepend: request.host }}"
    }
      {% if template contains 'article' %},
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{ article.title }}",
        "item": "{{ article.url | prepend: request.host }}"
      }
      {% endif %}
    {% elsif template contains 'page' %},
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{ page.title }}",
      "item": "{{ page.url | prepend: request.host }}"
    }
    {% endif %}
  ]
}
</script>