{% assign blog_handle = 'news' %}
{% assign blog_obj = blogs[blog_handle] %}
{% if blog_obj and blog_obj.articles_count > 0 %}
<section>
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-semibold">From the blog</h2>
    <a href="{{ blog_obj.url }}" class="text-blue-600 hover:underline">View all</a>
  </div>
  <div class="grid gap-6 md:grid-cols-3">
    {% for article in blog_obj.articles limit: 3 %}
      <article class="bg-white rounded-lg shadow-sm overflow-hidden">
        <a href="{{ article.url }}" class="block">
          {% if article.image %}
            <img src="{{ article.image | img_url: '720x' }}" alt="{{ article.title | escape }}" class="w-full h-44 object-cover">
          {% endif %}
          <div class="p-4">
            <h3 class="font-medium line-clamp-2">{{ article.title }}</h3>
            <p class="mt-1 text-sm text-gray-600 line-clamp-2">{{ article.excerpt | strip_html }}</p>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</section>
{% endif %}
