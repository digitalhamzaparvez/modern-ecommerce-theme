<!-- Quick View Modal -->
<div x-data="{ showQuickView: false, product: null }" 
     x-show="showQuickView"
     @show-quick-view.window="showQuickView = true; product = $event.detail.product"
     @keydown.escape.window="showQuickView = false"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     style="display: none;">
  
  <!-- Backdrop -->
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 transition-opacity bg-gray-900 bg-opacity-75" @click="showQuickView = false"></div>
    
    <!-- Modal Content -->
    <div class="inline-block w-full max-w-4xl my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl rounded-3xl">
      <div class="relative">
        <!-- Close Button -->
        <button @click="showQuickView = false" 
                class="absolute top-4 right-4 z-10 p-2 text-gray-400 hover:text-gray-600 bg-white rounded-full shadow-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-8">
          <!-- Product Images -->
          <div class="space-y-4">
            <div class="aspect-square bg-slate-100 rounded-2xl overflow-hidden">
              <img x-show="product" 
                   :src="product?.featured_image" 
                   :alt="product?.title"
                   class="w-full h-full object-cover">
            </div>
          </div>
          
          <!-- Product Details -->
          <div class="space-y-6">
            <div>
              <h2 x-text="product?.title" class="text-3xl font-bold text-slate-900 mb-2"></h2>
              <div class="flex items-center space-x-2 mb-4">
                <span x-text="product?.price" class="text-2xl font-bold text-amber-600"></span>
                <span x-show="product?.compare_at_price" 
                      x-text="product?.compare_at_price" 
                      class="text-lg text-slate-500 line-through"></span>
              </div>
            </div>
            
            <div class="flex items-center space-x-1">
              <div class="flex text-amber-400">
                {% for i in (1..5) %}
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                {% endfor %}
              </div>
              <span class="text-sm text-slate-600">(24 reviews)</span>
            </div>
            
            <div x-show="product?.description" class="prose prose-slate max-w-none">
              <p x-text="product?.description" class="text-slate-600"></p>
            </div>
            
            <!-- Variant Selection -->
            <div x-show="product?.variants?.length > 1" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-slate-900 mb-2">Size</label>
                <div class="flex space-x-2">
                  <template x-for="variant in product?.variants" :key="variant.id">
                    <button class="px-4 py-2 border border-slate-300 rounded-lg text-sm hover:border-amber-500 focus:ring-2 focus:ring-amber-500 focus:border-amber-500"
                            x-text="variant.title"></button>
                  </template>
                </div>
              </div>
            </div>
            
            <!-- Quantity -->
            <div class="flex items-center space-x-4">
              <label class="block text-sm font-medium text-slate-900">Quantity</label>
              <div class="flex items-center border border-slate-300 rounded-lg">
                <button class="p-2 hover:bg-slate-50" @click="quantity = Math.max(1, quantity - 1)">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                  </svg>
                </button>
                <input x-model="quantity" type="number" min="1" class="w-16 px-3 py-2 text-center border-0 focus:ring-0">
                <button class="p-2 hover:bg-slate-50" @click="quantity++">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Add to Cart -->
            <div class="space-y-3">
              <button class="w-full bg-gradient-to-r from-amber-500 to-amber-600 text-white py-4 px-8 rounded-2xl font-semibold text-lg hover:from-amber-600 hover:to-amber-700 transform hover:scale-105 transition-all shadow-lg">
                Add to Cart
              </button>
              <button class="w-full border border-slate-300 text-slate-700 py-3 px-8 rounded-2xl font-medium hover:border-slate-400 transition-colors">
                View Full Details
              </button>
            </div>
            
            <!-- Trust Signals -->
            <div class="border-t border-slate-200 pt-6">
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-slate-600">Free shipping</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-slate-600">30-day returns</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('quickView', () => ({
      quantity: 1
    }));
  });
</script>
