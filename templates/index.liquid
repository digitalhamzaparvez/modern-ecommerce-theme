<!-- Social Proof Section -->
{% section 'social-proof' %}

<!-- Featured Categories -->
{% section 'featured-categories' %}

<!-- Best Sellers Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium mb-4">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <span>Customer Favorites</span>
      </div>
      <h2 class="text-4xl lg:text-5xl font-light text-slate-900 tracking-tight mb-4">
        Best Selling 
        <span class="font-bold">Premium Items</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        Discover why these exceptional products have become the top choice for discerning customers worldwide.
      </p>
    </div>
    
    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {% for product in collections.featured.products limit: 8 %}
        {% render 'product-card', product: product, show_quick_add: true, show_quick_view: true %}
      {% endfor %}
    </div>
    
    <!-- Call to Action -->
    <div class="text-center">
      <a href="/collections/all" class="inline-flex items-center bg-gradient-to-r from-amber-500 to-amber-600 text-white px-8 py-4 rounded-2xl font-semibold shadow-2xl hover:from-amber-600 hover:to-amber-700 transition-all duration-300 transform hover:scale-105">
        <span class="text-lg">View All Products</span>
        <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
{% section 'testimonials' %}

