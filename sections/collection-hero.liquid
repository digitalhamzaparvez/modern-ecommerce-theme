<section class="mb-6 rounded-xl bg-white shadow-sm overflow-hidden">
  <div class="h-44 md:h-56 bg-gradient-to-r from-blue-600 to-indigo-600 relative">
    {% if collection.image %}
      <img src="{{ collection.image | img_url: '1200x' }}" class="absolute inset-0 w-full h-full object-cover opacity-30" alt="{{ collection.title | escape }}">
    {% endif %}
  </div>
  <div class="p-6">
    <h1 class="text-2xl font-semibold">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="mt-2 text-gray-600">{{ collection.description }}</p>
    {% endif %}
  </div>
</section>
