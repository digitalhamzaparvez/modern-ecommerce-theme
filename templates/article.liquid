{% section 'header' %}
<main class="mx-auto max-w-3xl px-4 py-10">
  {% render 'breadcrumbs' %}
  <article class="prose max-w-none">
    <header class="mb-6">
      <h1 class="text-3xl font-bold">{{ article.title }}</h1>
      <p class="text-sm text-gray-500">{{ article.published_at | date: "%B %d, %Y" }} Â· {{ article.author }}</p>
    </header>
    {% if article.image %}
      <img class="rounded-lg" src="{{ article.image | img_url: '1200x' }}" alt="{{ article.title | escape }}">
    {% endif %}
    <div class="mt-6">{{ article.content }}</div>
  </article>
</main>
{% section 'footer' %}
