<div class="group relative bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
  <a href="{{ product.url }}" class="block aspect-square bg-gray-100">
    {% assign featured = product.featured_image | default: product.images.first %}
    {% if featured %}
      <img src="{{ featured | img_url: '540x540' }}" alt="{{ product.title | escape }}" class="h-full w-full object-cover" loading="lazy">
    {% endif %}
  </a>
  <div class="p-4">
    <a href="{{ product.url }}" class="block font-medium line-clamp-2">{{ product.title }}</a>
    <div class="mt-1 text-sm text-gray-600">{{ product.price | money }}</div>
    <div class="mt-3 flex gap-2">
      {% assign first_variant = product.variants.first %}
      {% if first_variant %}
        <button class="btn-primary text-sm" data-quick-add data-variant-id="{{ first_variant.id }}">Quick add</button>
      {% endif %}
      <button class="text-sm px-3 py-2 border rounded-lg hover:bg-gray-50" data-quick-view data-product-handle="{{ product.handle }}">Quick view</button>
    </div>
  </div>
</div>
