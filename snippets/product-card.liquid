<div class="group card-premium overflow-hidden">
  <a href="{{ product.url }}" class="block aspect-square bg-slate-100 overflow-hidden">
    {% assign featured = product.featured_image | default: product.images.first %}
    {% if featured %}
      <img src="{{ featured | img_url: '540x540' }}" alt="{{ product.title | escape }}" class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy">
    {% endif %}
  </a>
  <div class="p-6">
    <a href="{{ product.url }}" class="block">
      <h3 class="font-semibold text-premium line-clamp-2 group-hover:text-amber-600 transition-colors">{{ product.title }}</h3>
      <div class="mt-2 text-lg font-semibold text-amber-600">{{ product.price | money }}</div>
    </a>
    <div class="mt-4 flex gap-2">
      {% assign first_variant = product.variants.first %}
      {% if first_variant %}
        <button class="btn-premium text-sm flex-1" data-quick-add data-variant-id="{{ first_variant.id }}">Quick Add</button>
      {% endif %}
      <button class="btn-premium-outline text-sm" data-quick-view data-product-handle="{{ product.handle }}">Quick View</button>
    </div>
  </div>
</div>
