<section class="relative overflow-hidden min-h-screen bg-gradient-to-br from-amber-50 via-white to-amber-100">
  <!-- Hero Content -->
  <div class="relative mx-auto max-w-7xl px-6 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Announcement Badge -->
        <div class="inline-flex items-center gap-2 bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">
          <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
          Don't miss out on amazing deals! Every purchase is backed by our unbeatable 365-Day Guarantee!
        </div>
        
        <!-- Main Heading -->
        <div class="space-y-6">
          <h1 class="text-4xl lg:text-6xl font-light text-slate-900 leading-tight">
            Premium Lifestyle
            <span class="block font-semibold text-amber-600">Made Simple</span>
          </h1>
          <p class="text-lg lg:text-xl text-slate-600 leading-relaxed max-w-2xl">
            At PeakWares, elevated living isn't just possible - it's simple. Discover curated collections of premium products designed to enhance your daily life.
          </p>
        </div>
        
        <!-- Featured Products Preview -->
        <div class="space-y-4">
          <p class="text-sm font-medium text-slate-500 uppercase tracking-wide">Featured Products</p>
          <div class="grid grid-cols-2 gap-4 max-w-md">
            <!-- Product Card 1 -->
            <div class="bg-white rounded-lg border border-slate-200 p-4 hover:shadow-lg transition-shadow duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-slate-100 to-slate-200 rounded-lg mb-3 flex items-center justify-center">
                <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-slate-900 text-sm mb-1">Premium Collection®</h3>
              <p class="text-xs text-slate-600">Luxury Lifestyle & Executive Essentials</p>
            </div>
            
            <!-- Product Card 2 -->
            <div class="bg-white rounded-lg border border-slate-200 p-4 hover:shadow-lg transition-shadow duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-100 to-amber-200 rounded-lg mb-3 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-slate-900 text-sm mb-1">Wellness Plus™</h3>
              <p class="text-xs text-slate-600">Premium Wellness & Tech Solutions</p>
            </div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a href="/collections/all" class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            <span>Shop Premium Collection</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="/pages/about" class="group inline-flex items-center justify-center px-8 py-4 border-2 border-slate-300 text-slate-700 font-semibold rounded-full hover:border-slate-800 hover:bg-slate-800 hover:text-white transition-all duration-300">
            <span>Learn More</span>
          </a>
        </div>
      </div>
      
      <!-- Right Side - Hero Image -->
      <div class="relative lg:flex justify-center items-center">
        <div class="relative w-full max-w-lg mx-auto">
          <!-- Hero Image Container -->
          <div class="relative aspect-square bg-gradient-to-br from-amber-100 via-white to-amber-50 rounded-3xl p-8 shadow-2xl overflow-hidden">
            <!-- Premium Product Visual -->
            <div class="flex items-center justify-center h-full">
              <div class="text-center space-y-6">
                <!-- Product Icon/Image -->
                <div class="w-32 h-32 mx-auto bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center shadow-xl">
                  <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
                  </svg>
                </div>
                
                <!-- Product Info -->
                <div class="space-y-2">
                  <h3 class="text-xl font-bold text-slate-900">Premium Lifestyle Collection</h3>
                  <p class="text-slate-600 text-sm">Curated for Excellence</p>
                  
                  <!-- Rating -->
                  <div class="flex items-center justify-center gap-1">
                    {% for i in (1..5) %}
                    <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    {% endfor %}
                    <span class="text-sm text-slate-600 ml-2">(2,847 reviews)</span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Floating Badges -->
            <div class="absolute top-4 right-4 bg-emerald-500 text-white px-3 py-1 rounded-full text-xs font-medium">
              Premium Quality
            </div>
            <div class="absolute bottom-4 left-4 bg-amber-500 text-white px-3 py-1 rounded-full text-xs font-medium">
              Free Shipping
            </div>
          </div>
          
          <!-- Decorative Elements -->
          <div class="absolute -top-3 -right-3 w-12 h-12 bg-amber-400 rounded-full opacity-20 animate-pulse"></div>
          <div class="absolute -bottom-3 -left-3 w-8 h-8 bg-emerald-400 rounded-full opacity-30"></div>
        </div>
      </div>
    </div>
        </div>
        
        <!-- Trust Indicators -->
  <div class="bg-white py-8 border-t border-slate-100">
    <div class="mx-auto max-w-7xl px-6">
      <div class="flex flex-wrap justify-center items-center gap-8 text-center">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-emerald-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-slate-700">50K+ Happy Customers</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-slate-700">25+ Countries Served</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-slate-700">99% Satisfaction Rate</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-slate-700">24/7 Premium Support</span>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "🎯 Hero Section",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "header",
      "content": "✨ Announcement Badge"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show announcement badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "✨ New Collection Available",
      "info": "Short announcement text"
    },
    {
      "type": "color",
      "id": "badge_bg_color",
      "label": "Badge background color",
      "default": "#fef3c7"
    },
    {
      "type": "header",
      "content": "📝 Main Content"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Main headline",
      "default": "Premium Lifestyle Made Simple",
      "info": "Large heading text"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At PeakWares, elevated living isn't just possible - it's simple. Discover curated collections of premium products designed to enhance your daily life.",
      "info": "Descriptive text below heading"
    },
    {
      "type": "header",
      "content": "🔗 Call to Action Buttons"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary button URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary button text",
      "default": "Shop Premium Collection"
    },
    {
      "type": "color",
      "id": "cta_bg_color",
      "label": "Primary button color",
      "default": "#f59e0b"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary button URL",
      "default": "/pages/about"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "header",
      "content": "🎨 Background & Style"
    },
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "Background gradient start",
      "default": "#fef7ed"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background gradient end",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (optional)",
      "info": "Will overlay on gradient"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 60,
      "max": 140,
      "step": 10,
      "default": 80,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "trust_indicator",
      "name": "✅ Trust Indicator",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "🚚",
          "info": "Use emoji for icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Trust text",
          "default": "Free Shipping"
        }
      ]
    },
    {
      "type": "feature_product",
      "name": "🏆 Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Choose featured product"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Product badge",
          "default": "Best Seller",
          "info": "Badge shown on product image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "trust_indicator",
          "settings": {
            "icon": "🚚",
            "text": "Free Shipping"
          }
        },
        {
          "type": "trust_indicator",
          "settings": {
            "icon": "↩️",
            "text": "Easy Returns"
          }
        },
        {
          "type": "trust_indicator",
          "settings": {
            "icon": "🔒",
            "text": "Secure Payment"
          }
        }
      ]
    }
  ]
}
{% endschema %}