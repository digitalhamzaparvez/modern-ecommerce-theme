        <div class="inline-flex items-center text-amber-600 text-sm font-medium">
          <span>Explore Collection</span>
        </div>
      </a>

      <!-- Category 6 - Shop All -->
      <a href="/collections/all" class="category-card group bg-gradient-to-br from-amber-50 to-amber-100 border border-amber-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 hover:border-amber-300">
